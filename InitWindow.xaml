<Window
    x:Class="L4D2DevTools.InitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window_Init"
    Title="设置求生之路2主程序路径"
    Width="500"
    Height="80"
    Closing="Window_Init_Closing"
    Loaded="Window_Init_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--  ////////////////////////  -->
        <TextBox
            x:Name="TextBox_L4D2MainExec"
            Padding="7"
            VerticalContentAlignment="Center"
            IsReadOnly="True" />
        <!--  ////////////////////////  -->
        <Button
            x:Name="Button_SelectL4D2MainExec"
            Grid.Column="1"
            Margin="5,0,0,0"
            Padding="5"
            Click="Button_SelectL4D2MainExec_Click"
            Content="选择" />
    </Grid>

</Window>
